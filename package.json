{
  "name": "@rsousacode/date-picker-svelte",
  "version": "2.3.1",
  "description": "Date and time picker for Svelte using px instead of rem and CSS changes to be compatible with Beercss.",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "svelte-package && vite build",
    "build:package": "svelte-package",
    "build:site": "vite build",
    "preview": "vite preview",
    "lint": "prettier --check src *.js && eslint src *.js && svelte-check",
    "format": "prettier --write src *.js && eslint --fix src *.js",
    "test": "jest tests",
    "test:coverage": "jest --collect-coverage --collectCoverageFrom=src/lib/**"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^1.0.0",
    "@sveltejs/kit": "^1.0.0",
    "@sveltejs/package": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "babel-jest": "^29.3.1",
    "date-fns": "^2.29.3",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "jest": "^29.3.1",
    "mdsvex": "^0.10.6",
    "prettier": "^2.8.1",
    "prettier-plugin-svelte": "^2.9.0",
    "sass": "^1.56.2",
    "svelte": "^3.55.0",
    "svelte-check": "^2.10.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4",
    "vite": "^4.0.1"
  },
  "license": "MIT",
  "homepage": "https://date-picker-svelte.kasper.space",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rsousacode/date-picker-svelte.git"
  },
  "bugs": {
    "url": "https://github.com/rsousacode/date-picker-svelte/issues"
  },
  "author": {
    "name": "Kasper Henningsen",
    "url": "https://kasper.space"
  },
  "keywords": [
    "date",
    "time",
    "date-picker",
    "datepicker",
    "date-time-picker",
    "calendar",
    "svelte",
    "front-end"
  ],
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "pluginSearchDirs": [
      "."
    ]
  }
}
